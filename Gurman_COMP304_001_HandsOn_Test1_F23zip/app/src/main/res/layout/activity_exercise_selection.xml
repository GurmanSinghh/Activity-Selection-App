<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExerciseSelectionActivity">

    <ImageView
        android:id="@+id/lineImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line_image"
        android:scaleType="fitXY"
        />

    <CheckBox
        android:id="@+id/looseThingsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loose Things"/>

    <CheckBox
        android:id="@+id/rememberNamesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Names"/>

    <CheckBox
        android:id="@+id/learnQuicklyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Quickly"/>

    <CheckBox
        android:id="@+id/trackMultipleThingsCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep Track of Multiple Things"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_gravity="center"
        android:onClick="onNextButtonClick"/>

</LinearLayout>

